{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/api/health"
    },
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/mcp",
      "dest": "/api/mcp"
    },
    {
      "src": "/mcp/tools",
      "dest": "/api/tools"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
